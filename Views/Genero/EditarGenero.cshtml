@model casaDeShows.Models.GeneroEvento

<div class="container">
    <h5 class="card-header h4 mb-4 text-center">
        <strong>Edição De Genero</strong>
    </h5>
    <div class="card">
        <form asp-controller="Genero" asp-action="EditarGenero" method="POST">
            <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Genero" class="titles"></label>
                <input asp-for="Genero" class="form-control mb-4" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="btnsucesso" value="Editar Genero" class="btn btn-success"/>
            </div>
            </div>
        </form>
    </div>
</div>